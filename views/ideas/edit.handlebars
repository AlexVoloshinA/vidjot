<div class="card card-body">
  <h3>Video Idea</h3>
  <form action="/ideas/edit/{{idea.id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input value="{{idea.title}}" required type="text" class="form-control" name="title">
    </div>
    <div class="form-group">
      <label for="details">Details</label>
      <textarea  required class="form-control"  name="details" >{{idea.details}}</textarea>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>
</div>